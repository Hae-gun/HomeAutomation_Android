<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/win_btn_back_line"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAuto"
            android:layout_width="70pt"
            android:layout_height="15pt"
            android:background="@drawable/win_btn_back_image_check"
            android:text="자동" />

        <Button
            android:id="@+id/btnManual"
            android:layout_width="70pt"
            android:layout_height="15pt"
            android:background="@drawable/win_btn_back_image"
            android:text="수동" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_marginTop="16dp"
        android:src="@drawable/selector_frag_ib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTop">

        <ToggleButton
            android:id="@+id/tglBtnWindow"
            android:layout_width="55pt"
            android:layout_height="55pt"
            android:layout_gravity="center"
            android:background="@drawable/selector_window"
            android:textOn=""
            android:textOff=""  />
    </FrameLayout>

<!--    <TextView-->
