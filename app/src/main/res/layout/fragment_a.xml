<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/fragment_background">

    <TextView
        android:id="@+id/fragATV01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="창문"
        android:textSize="20sp"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <ToggleButton
        android:id="@+id/fragAToggleBtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/imagebtn_icon_selector"
        android:textOff="  "
        android:textOn=" "/>

    <TextView
        android:id="@+id/fragACurrentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 온도"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <ToggleButton
        android:id="@+id/fragATB01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center" />
    <ToggleButton
        android:id="@+id/fragATB02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center"/>
    <ToggleButton
        android:id="@+id/fragA_TB_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center"/>
</LinearLayout>